@using WebApplication3.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yeteneklerim/YetenekEkle" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <!-- Tabloyu %100 genişliğe yaymak için table class'ını düzenliyoruz -->
                                <table class="table table-bordered table-responsive" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <!-- Progress Bar'ı % oranına göre ayarlama -->
                                                        <div class="progress-bar progress-bar-danger" style="width: @item.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-success">@item.Oran%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yeteneklerim/YetenekDüzenle/@item.ID">
                                                        <i class="fas fa-pencil-alt"></i> Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yeteneklerim/YetenekSil/@item.ID">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
